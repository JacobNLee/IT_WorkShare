<TsGui LiveData="TRUE">
	<Height>400</Height>
	<Width>400</Width>

	<HardwareEval />

	<!-- Window generates in center of screen -->
	<!-- Reported variables does not change -->
	<WindowLocation>
		<Left>400</Left>								
		<Top>20</Top>
		<StartupLocation>Center</StartupLocation>		<!-- Manual | Center -->
	</WindowLocation>
	
	<!-- Rounded buttons, standard labels -->
	<Buttons>
		<Next>Next Page</Next>
		<Back>Back</Back>
		<Cancel>Cancel</Cancel>
		<Finish>Finish</Finish>
		<Formatting>
			<CornerRadius>7</CornerRadius>
			<HorizontalAlignment>Right</HorizontalAlignment>
			<Font>
				<Size>15</Size>
				<Style>Italic</Style>
			</Font>
		</Formatting>
	</Buttons>

	<!-- Footer doesn't change -->
	<Footer>
		<Bg-Color>#003366</Bg-Color>
		<Text>SCCM Frontend v.1.0&#xD;Powered by TsGui, visit https://www.20road.com</Text>
		<Height>40</Height>
		<HAlign>Left</HAlign>


		<Image>
				<File>avatar.jpg</File>
				<Width>40</Width>
				<Height>40</Height>
				<Stretch>Uniform</Stretch>					
		</Image>
	</Footer>


	<!-- Pg.1: Main info -->
	<Page>
		<!-- Heading 1 -->
		<Heading>
			<Bg-Color>#003366</Bg-Color>
			<Title>Base Info</Title>
			<Text>Default Information about the Machine</Text>
			<Height>40</Height>
			<HAlign>Left</HAlign>		

			<Image>
				<File>nevada.png</File>
				<Width>34</Width>
				<Height>34</Height>
				<Stretch>Uniform</Stretch>					
			</Image>

		</Heading>

		<Row>		
			<Column>
				<Formatting>
					<LeftCellWidth>110</LeftCellWidth>
					<RightCellWidth>160</RightCellWidth>
				</Formatting>
				
				<!-- GUIOptions -->
						<Toggle Group="Group_1">
							<Enabled>labs</Enabled>
							<Hide/>
						</Toggle>
						<Toggle Group="Group_2">
							<Enabled>desktop</Enabled>
							<Hide/>
						</Toggle>
						<Toggle Group="Group_3">
							<Enabled>clinics</Enabled>
							<Hide/>
						</Toggle>
						<Toggle Group="Group_4">
							<Enabled>cobalab</Enabled>
							<Hide/>
						</Toggle>

				<!-- Dropdown Toggles -->
				<GuiOption Type="DropDownList">
					<Variable>collection_name</Variable>
					<Label>Select Option</Label>		

					<Option><!-- 1-->
						<Text>OIT Labs Image</Text>
						<Value>labs</Value>
					</Option>
					
					<Option><!-- 2 -->
						<Text>Desktop Base Image</Text>
						<Value>desktop</Value>					
					</Option>

					<Option><!-- 3 -->
						<Text>Clinic</Text>
						<Value>clinics</Value>
					</Option>

					<Option><!-- 4 -->
						<Text>College of Business Administration</Text>
						<Value>cobalab</Value>
					</Option>

					<Option><!-- 5 -->
						<Toggle Group="Group_5">
							<Hide/>
						</Toggle>
						<Text>Engineering Computing Center</Text>
						<Value>ecclab</Value>
					</Option>

				</GuiOption>


			</Column>
		</Row>
	</Page><!--end main page-->
	<Page PurgeInactive="TRUE">
		<Group>Group_1</Group>
		<!-- Heading 1 -->
		<Heading>
			<Bg-Color>#003366</Bg-Color>
			<Title>1</Title>
			<Text>Default Information about the Machine</Text>
			<Height>40</Height>
			<HAlign>Left</HAlign>		

			<Image>
				<File>nevada.png</File>
				<Width>34</Width>
				<Height>34</Height>
				<Stretch>Uniform</Stretch>					
			</Image>

		</Heading>
		<Row>
			<Column>
			</Column>
		</Row>
	</Page><!--end page 1-->
	<Page PurgeInactive="TRUE">
		<Group>Group_2</Group>
		<!-- Heading 1 -->
		<Heading>
			<Bg-Color>#003366</Bg-Color>
			<Title>2</Title>
			<Text>Default Information about the Machine</Text>
			<Height>40</Height>
			<HAlign>Left</HAlign>		

			<Image>
				<File>nevada.png</File>
				<Width>34</Width>
				<Height>34</Height>
				<Stretch>Uniform</Stretch>					
			</Image>

		</Heading>
		<Row>
			<Column>
			</Column>
		</Row>
	</Page><!--end page 2-->
	<Page PurgeInactive="TRUE">
		<Group>Group_3</Group>
		<Row>
			<Column>
			</Column>
		</Row>
	</Page><!--end page 3-->
	<Page PurgeInactive="TRUE">
		<Group>Group_4</Group>
		<Row>
			<Column>
